# Voice Talk Application - Configuration Template
# Copy this file to .env and fill in your values

# ==========================
# API Keys (Optional)
# ==========================

# HuggingFace API for conversational AI and speech recognition
# Get from: https://huggingface.co/settings/tokens
STT_HUGGINGFACE_API_KEY=your_token_here
AI_HUGGINGFACE_API_KEY=your_token_here

# Azure Text-to-Speech (optional, for premium voices)
# Get from: https://portal.azure.com
TTS_AZURE_API_KEY=your_key_here
TTS_AZURE_REGION=eastus

# ==========================
# Audio Settings
# ==========================

# Audio sample rate in Hz (16000 is optimal for speech)
AUDIO_SAMPLE_RATE=16000

# Number of audio channels (1=mono, 2=stereo)
AUDIO_CHANNELS=1

# Audio device index (leave empty for default)
# Run: python cli.py list-devices
AUDIO_DEVICE_INDEX=

# ==========================
# Server Settings
# ==========================

# Server host and port
HOST=127.0.0.1
PORT=8000

# Enable debug mode (shows detailed errors)
DEBUG=false

# ==========================
# Logging
# ==========================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ==========================
# Application Settings
# ==========================

# Enable voice command confirmation before execution
COMMANDS_CONFIRMATION_REQUIRED=true

# Enable screen reader support (accessibility)
A11Y_SCREEN_READER_ENABLED=false
